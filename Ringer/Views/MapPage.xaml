        <AbsoluteLayout>
            <maps:Map x:Name="MyMap" HasScrollEnabled="True" MapType="Street" HasZoomEnabled="True" AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="0,0,1,.35" />
            <Button Text="🚩"
