<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:viewmodels="clr-namespace:Ringer.ViewModels"
             mc:Ignorable="d"
             x:Class="Ringer.Views.MapPage"
             Shell.NavBarIsVisible="False"             
             Shell.TabBarIsVisible="False">
    
    <ContentPage.BindingContext>
        <viewmodels:MapPageViewModel/>
    </ContentPage.BindingContext>
    
    
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid>
                <maps:Map x:Name="MyMap"
                          HasScrollEnabled="True"
                          MapType="Street"
                          HasZoomEnabled="True"/>
                
                <Button Text="Me"
                        VerticalOptions="Start"
                        HorizontalOptions="End"
                        Clicked="Button_Clicked"
                        IsVisible="{OnPlatform False, iOS=True}"/>
            </Grid>
                
            
            <ListView x:Name="ItemsListView" Grid.Row="1"       
                      ItemsSource="{Binding Infomations}"
                      VerticalOptions="FillAndExpand"                      
                      ItemSelected="ItemsListView_ItemSelected"
                      HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="20, 10, 20, 10">
                                <Label Text="{Binding Title}" 
                                    LineBreakMode="NoWrap" 
                                    Style="{DynamicResource ListItemTextStyle}"
                                    TextColor="Accent"
                                    FontSize="16"/>
                                <Label Text="{Binding Extras}"
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13" />
                                <Label Text="{Binding DisplayLocation}"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13" />
                                <Label Text="{Binding DisplayPhoneNumber}"
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13" />
                                
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="상담" Clicked="Button_Clicked_1Async"
                    TextColor="White"
                    FontSize="14"
                    Margin="0,-20,15,0"
                    CornerRadius="20"
                    WidthRequest="40"
                    HeightRequest="40"
                    Grid.Row="1"
                    BackgroundColor="#B42A42"
                    Padding="5"
                    VerticalOptions="Start"
                    HorizontalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>